<html>
        <body>
            <form action="/produtos/salva" method="post">
                <div>
                    <% if (errosValidacao){ %>
                        <ul>
                            <% for (i=0; i < errosValidacao.length; i++) {%>
                            <li><%=errosValidacao[i].param%> - <%=errosValidacao[i].msg%></li>
                            <%}%>
                        </ul>
                    <%}%>
                </div>
                <div>
                    <label for="titulo">Titulo</label>
                    <input type="text" id="titulo" name="titulo" value="<%=produto.titulo%>" placeholder="Título do livro"/>
                </div>
                <div>
                    <label for="preco">Preço</label>
                    <input type="text" id="preco" name="preco" value="<%=produto.preco%>" placeholder="Valor ex:150.25"/>
                </div>
                <div>
                    <label for="descricao">Descrição</label>
                    <textarea cols="20" rows="10"  id="descricao" name="descricao" placeholder="Descrição sobre o livro"><%=produto.descricao %></textarea>
                </div>
    
                <input type="submit" value="gravar"/>
            </form>
        </body>
    </html>